<DockPanel x:Class="Proryv.ElectroARM.Controls.Controls.F_Value.FValueBindedToMeasureForm"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:visual="clr-namespace:Proryv.AskueARM2.Client.Visual"
           mc:Ignorable="d" Height="16" DataContextChanged="FValueBindedToMeasureFormOnDataContextChanged" 
           Loaded="FValueBindedToMeasureFormOnLoaded" Unloaded="FValueBindedToMeasureFormOnUnloaded">
   
    <visual:F_FlagImage SnapsToDevicePixels="True" Height="16" Width="16" 
                        DockPanel.Dock="Right" VerticalAlignment="Center" x:Name="FlagImage" FlagChanged="FlagImageOnFlagChanged" Visibility="Collapsed"/>

    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Background="Transparent" Height="16" Padding="0,0,2,0"
             x:Name="ValueLabel" Visibility="Collapsed"/>
    
</DockPanel>
