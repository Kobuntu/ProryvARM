                        <ContentPresenter   SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" RecognizesAccessKey="True" HorizontalAlignment="Stretch"   VerticalAlignment="Center" Margin="6,1,0,0"/>
