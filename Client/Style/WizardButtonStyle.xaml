    <Style x:Key="ButtonFocusVisualWizardSelectButton">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border>
                        <Rectangle Stroke="Black" StrokeDashArray="1 2" StrokeThickness="1" Margin="4" SnapsToDevicePixels="true"/>
                    </Border>
                </ControlTemplate>
