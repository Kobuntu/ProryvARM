<DockPanel x:Class="Proryv.ElectroARM.Controls.Controls.F_Value.IntegralValueBindedToMeasureForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:visual1="clr-namespace:Proryv.AskueARM2.Client.Visual"
           mc:Ignorable="d" Height="22" LastChildFill="True" DataContextChanged="FValueBindedToMeasureFormOnDataContextChanged" 
           Unloaded="FValueBindedToMeasureFormOnUnloaded">

    <visual1:F_FlagImage SnapsToDevicePixels="True" Stretch="Fill"  
                        DockPanel.Dock="Right" VerticalAlignment="Center" x:Name="FlagImage" FlagChanged="FlagImageOnFlagChanged"/>

    <Label FontSize="{StaticResource BaseFontSizeXXS}" Width="90" HorizontalContentAlignment="Left"
               VerticalAlignment="Center" x:Name="lEventDateTime" Padding="2,0,10,0" ContentStringFormat="dd.MM.yyyy HH:mm"/>

    <Label HorizontalContentAlignment="Right"  VerticalAlignment="Center" Background="Transparent" Height="22"
           VerticalContentAlignment="Center"  Padding="2,0,10,0" FontWeight="Medium" x:Name="ValueLabel"/>
</DockPanel>
